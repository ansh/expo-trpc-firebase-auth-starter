datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                  String  @id @unique // from Firebase
  phoneNumber         String  @unique
  onboardingCompleted Boolean @default(false)
  name                String?
  isPro               Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
